{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "debug",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run dev",
        "cwd": "${workspaceFolder}/client",
        "serverReadyAction": {
          "pattern": "- Local:.+(https?://.+)",
          "uriFormat": "%s",
          "action": "debugWithChrome"
        }
      },
      {
        "name": "Local server",
        "type": "python",
        "request": "launch",
        "program": "server/lambda/local.py",
        "console": "integratedTerminal",
        "justMyCode": true
      }
    ]
  }